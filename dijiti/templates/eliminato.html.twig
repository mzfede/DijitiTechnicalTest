<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
      <title>{% block title %}Utente eliminato!{% endblock %}</title>

        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <style>
              body{
                text-align: center;
                margin-top: 2em;
              }
              label{
                font-size: 1.2em;
                padding:1em;
              }
            </style>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
      {% block body %}
        <h2>Hai eliminato l'utente: </h2>
        {% for elem in usersToDelete %}
          {{elem}}
        {% endfor %}
        <div name = "toIndex">
          <form name = "toIndex" action="\index">
            <button type="submit" name="submit">OK</button>
          </form>
        </div>
      {% endblock %}
    </body>
</html>
